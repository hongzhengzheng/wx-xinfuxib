.index-search {
  color: #999;
  background: #f9f9f9;
  overflow: auto;
  text-align: center;
}

.index-search navigator {
  margin: 16rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #fff;
  border-radius: 28rpx;
}

.index-search navigator view {
  display: inline-block;
}

.index-search navigator view icon {
  float: left;
  margin: 12rpx 8rpx 0 0;
}

.index-search navigator view text {
  float: left;
  font-size: 30rpx;
}
